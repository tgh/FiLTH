<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <!--                                                                            -->
    <!-- This is an extension of the base-context configuration; it defines its own -->
    <!-- dataSource bean, which is setup to point to a database of test data.       -->
    <!--                                                                            -->
    
    <import resource="base-context.xml"></import>
    
    <!-- Database connectivity via Hibernate -->
    <bean id="dataSource" class="org.apache.commons.dbcp2.BasicDataSource" destroy-method="close">
        <property name="driverClassName" value="${db.driver}" />
        <property name="url" value="${test.db.url}" />
        <property name="username" value="${test.db.username}" />
    </bean>

</beans>
