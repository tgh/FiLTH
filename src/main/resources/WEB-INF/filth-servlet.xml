<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation=
	       "http://www.springframework.org/schema/beans
	        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	        http://www.springframework.org/schema/mvc
	        http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
	        http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<mvc:resources mapping="/src/main/resources/**"
				   location="/src/main/resources/" />
	<mvc:annotation-driven />
	<context:component-scan base-package="net.tylerhayes.filth" />
	
	
	<!-- Freemarker config --------------------------------------------------->
	
	<bean id="freemarkerConfig" class="org.springframework.web.servlet.view.freemarker.FreeMarkerConfigurer">
	  <property name="templateLoaderPath">
	  	<value>/freemarker/</value>
	  </property>
	  
	  <!-- Uncomment any of the following for specific settings:
	  <property name="freemarkerSettings">
        <util:properties>
          <prop key="auto_import">layouts.ftl as layout, /common/util.ftl as util, /spring.ftl as spring</prop>
          <prop key="template_exception_handler">rethrow</prop>
          <!-- This avoids ints greater than '1000' from showing up with commas like '1,000'
          <prop key="number_format">0.####</prop>
        </util:properties>
      </property>
      -->
	</bean>

	<bean id="viewResolver" class="org.springframework.web.servlet.view.freemarker.FreeMarkerViewResolver">
	  <property name="cache" value="true"/>
	  <property name="suffix" value=".ftl"/>
	  <property name="contentType" value="text/html;charset=UTF-8"/>
	</bean>
				   
</beans>